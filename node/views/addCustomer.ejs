            </div>


        
            <div class="col-md-12"> 
                <div class="card">    
                    <!-- mrcats loop here to print the categories. --> 
                            <% for(var i=0; i<mrcats.length; i++) {%>

                                <h3 class="card-header bg-inverse text-white" data-toggle="collapse" data-target="#block_<%= mrcats[i].id %>"> 
                                <!-- as long as the array isnt empty print out all the categories within the mrcats array as tabs -->
                                <% if(mrcats.length > 0) { %>
                                <%= mrcats[i].category %>
                                <% } %> <span class="close text-white">-</span></h3>

                                <div id="block_<%= mrcats[i].id %>" class="collapse">

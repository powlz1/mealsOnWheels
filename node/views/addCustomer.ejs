                                <th>Tuesday</th>
                                <th>Wednesday</th>
                                <th>Thursday</th>
                                <th>Friday</th>
                                <th>Saturday</th>
                                <th>Sunday</th>
                            </tr>
                            <% for (var i=0;i<rows.length;i++){%>
                                <% row = rows[i]; %>
                                <% include partials/customerDayTr.ejs %>
                            <% } %>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-4">

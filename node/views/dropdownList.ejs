<div class="row" ng-app="AddDriverCustomer" ng-controller="CustomerDriverCtrl">
    <div class="col-md-6">
		Drivers: <select name="driver" ng-model="driver">
			<option selected disabled>Choose here</option>
			<% drivers.forEach(function(driver){ %>	
					<option value="<%=driver.id %>"><%=driver.user.firstName %> <%=driver.user.lastName %></option>
				<%})%>
		</select>
	</div>
	<div class="col-md-6">
		Customers: <select name="customer" ng-model="customer">
			<option selected disabled>Choose here</option>
				<% customers.forEach(function(customer){ %>	
					<option value="<%=customer.id %>"><%=customer.user.firstName %> <%=customer.user.lastName %></option>
				<%})%>
		</select>
	</div>
 <div style="position:fixed;top:0;right:0;padding:10px;">
        <input type="button" value="Save" class="btn btn-primary" ng-click="addDriverCustomer()"/>
    </div>
</div>


<script type="text/javascript">

    angular.module('AddDriverCustomer', []).controller('CustomerDriverCtrl', ['$scope', '$http', function ($scope, $http) {
        $scope.driver = "";
        $scope.customer = "";


        $scope.addDriverCustomer = function () {
           			
			console.log($scope.driver, $scope.customer);
			

           $http.post('/customerDriver', {
				"customer": $scope.customer,
                "driver": $scope.driver
			},
            function (response) { alert("saved"); },
            function (failure) { console.log("failed : ", failure ); });
        }
    }]);

</script>